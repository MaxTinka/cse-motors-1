<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head") %>

<body>
    <div id="wrapper">

        <!-- Header Top -->
        <header class="header-top">
            <div class="logo">CSE Motors</div>
            <div class="account">MY ACCOUNT</div>
        </header>

        <!-- Navigation -->
        <nav class="site-nav">
            <ul>
                <% navLinks.forEach(link => { %>
                    <li class="<%= link.active ? 'active' : '' %>">
                        <a href="<%= link.href %>"><%= link.text %></a>
                    </li>
                <% }) %>
            </ul>
        </nav>

        <!-- Main Content -->
        <main>
            <!-- Vehicle Section -->
            <section class="vehicle-container">
                <h2><%= vehicle.name %></h2>
                <ul class="vehicle-features">
                    <% vehicle.features.forEach(feature => { %>
                        <li><%= feature %></li>
                    <% }) %>
                </ul>
                <img src="<%= vehicle.image %>" alt="<%= vehicle.name %>" width="400">
                <div>
                    <a href="<%= vehicle.ctaLink %>">
                        <img src="<%= vehicle.ctaImg %>" alt="Own Today">
                    </a>
                </div>
            </section>

            <!-- Reviews Section -->
            <section class="reviews-container">
                <h3><%= vehicle.name %> Reviews</h3>
                <% reviews.forEach(review => { %>
                    <div class="review">
                        "<%= review.text %>" (<%= review.rating %>/5)
                    </div>
                <% }) %>
            </section>

            <!-- Upgrades Section -->
            <section class="upgrades-container">
                <h3><%= vehicle.name %> Upgrades</h3>
                <% upgrades.forEach(upgrade => { %>
                    <div class="upgrade-card">
                        <a href="<%= upgrade.link %>">
                            <img src="<%= upgrade.image %>" alt="<%= upgrade.alt %>">
                            <p><%= upgrade.name %></p>
                        </a>
                    </div>
                <% }) %>
            </section>
        </main>

        <!-- Footer -->
        <footer>
            &copy; 2025 - CSE 340 App | Max Tinka
        </footer>

    </div>
</body>
</html>
