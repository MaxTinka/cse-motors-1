<% const layout = 'layout' %>
<%- include(layout, { body: `
    <section class="hero">
        <div class="container">
            <h1 class="hero-title">Vehicle Inventory</h1>
            <p class="hero-subtitle">Browse our premium selection of quality vehicles</p>
        </div>
    </section>

    <section class="section">
        <div class="container">
            <div class="inventory-grid">
                <% if (inventory && inventory.length > 0) { %>
                    <% inventory.forEach(vehicle => { %>
                        <article class="vehicle-card" role="article">
                            <div class="vehicle-image">
                                <img src="<%= vehicle.inv_image %>" alt="<%= vehicle.inv_make %> <%= vehicle.inv_model %>" loading="lazy">
                            </div>
                            <div class="vehicle-info">
                                <h3 class="vehicle-name"><%= vehicle.inv_make %> <%= vehicle.inv_model %></h3>
                                <p class="vehicle-year">Year: <%= vehicle.inv_year %></p>
                                <p class="vehicle-price">UGX <%= Number(vehicle.inv_price).toLocaleString() %></p>
                                <p class="vehicle-miles">Mileage: <%= vehicle.inv_miles.toLocaleString() %> miles</p>
                                <p class="vehicle-color">Color: <%= vehicle.inv_color %></p>
                                <div class="vehicle-actions">
                                    <a href="/inventory/<%= vehicle.inv_id %>" class="btn btn-primary">View Details</a>
                                    <a href="/inventory/<%= vehicle.inv_id %>/update" class="btn btn-outline">Update</a>
                                </div>
                            </div>
                        </article>
                    <% }); %>
                <% } else { %>
                    <div class="no-vehicles">
                        <h3>No vehicles found in inventory</h3>
                        <p>Please check back later for new arrivals.</p>
                    </div>
                <% } %>
            </div>
        </div>
    </section>
`}) %>